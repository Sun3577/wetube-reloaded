doctype html
html(lang="ko")
  head
    title #{ pageTitle } | Wetube
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body(style="background-color: darkolivegreen")
    header
      h1= pageTitle
      nav
        ul
          li
            a(href="/") Home
          if loggedIn
            li 
              a(href="/logout") Log Out
            li 
              a(href="/my-profile") #{loggedInUser.name}Ïùò Profile
          else
            li 
              a(href="/login") Login
            li 
              a(href="/search") Search
            li 
              a(href="/join") Join
          li
            if pageTitle=="Home"
              a(href="/videos/upload") Upload Video
            else
    main
      block content
  include partials/footer
